<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bagaswibowo.contohfinalprojectkuis.MainActivity">

    <ImageView
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:id="@+id/bendera"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:src="@drawable/bendera_indonesia"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linePilGan"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/bendera"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:background="#86ff94">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/gbr_pilihanganda" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Kuis PIlihan Ganda"
            android:textSize="20sp"/>
    </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_below="@+id/bendera"
    android:id="@+id/LineEssay"
    android:layout_margin="20dp"
    android:background="#8eaeff"
    android:orientation="vertical">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/gbr_essay"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Kuis Essay"
        android:textSize="20sp"/>
</LinearLayout>
</RelativeLayout>

